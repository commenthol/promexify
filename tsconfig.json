{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "src/*.js"
  ],
  "exclude": [
    "coverage",
    "dist",
    "node_modules",
    "test"
  ]
}
